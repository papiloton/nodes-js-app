pipeline {
    agent {
        docker { 
            image 'node:latest'  // Use the appropriate Docker image
            label 'docker'       // Optional: specify label if required
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'node --version'  // Example command to run inside the container
            }
        }
    }
}